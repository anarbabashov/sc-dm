{
  "name": "sc-dm",
  "version": "1.0.0",
  "type": "module",
  "main": "worker.js",
  "scripts": {
    "start": "node worker.js",
    "test:server": "node test/test-server.js",
    "test:worker": "node -r dotenv/config worker.js dotenv_config_path=.env.test",
    "test": "echo \"Run 'npm run test:server' in one terminal, then 'npm run test:worker' in another\"",
    "cron:setup": "./setup-cron.sh",
    "cron:remove": "./remove-cron.sh",
    "cron:test": "./setup-cron-test.sh",
    "cron:test:remove": "./remove-cron-test.sh",
    "cron:list": "crontab -l | grep worker.js || echo 'No cron jobs installed'",
    "logs": "tail -f logs/worker.log",
    "logs:test": "tail -f logs/worker-test.log",
    "logs:clear": "rm -f logs/worker.log && echo 'Logs cleared'"
  },
  "keywords": ["soundcloud", "automation", "puppeteer", "dm"],
  "author": "",
  "license": "MIT",
  "description": "SoundCloud DM automation worker for messaging followers",
  "dependencies": {
    "dotenv": "^17.2.3",
    "puppeteer": "^24.25.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  }
}
